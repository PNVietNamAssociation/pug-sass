html
  head
    title User Manager
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='custom-bootstrap.css', rel='stylesheet')
    link(href='main.css', rel='stylesheet')
  body
    .container
      .row
        .col-md-6
          h1 User Manager
          form#form-information.form-horizontal(role='form')
            .form-group
              label#labelFirstname.col-sm-2.control-label(for='labelFirstname') Firstname
              .col-sm-10
                input#id-user(type='hidden')
                input#firstname.form-control(type='text', placeholder='Enter your Firstname')
            .form-group
              label#label-lastname.col-sm-2.control-label(for='labelLastname') Lastname
              .col-sm-10
                input#lastname.form-control(type='text', placeholder='Enter your Lastname')
            .form-group
              .col-sm-offset-2.col-sm-10
                button#create-user.btn.btn.btn-primary(type='submit', value='Create User') Create
                button#edit-user.btn.btn.btn-primary(type='submit', value='Edit User', style='display:none') Edit
                button#cancel-edit.btn.btn-danger(type='submit', value='Cancel Edit', style='display:none') Cancel
                button#delete-user.btn.btn-danger(type='submit', value='Delete User', style='display:none') Delete
      .row
        nav.navbar.navbar-default(role='navigation')
          form.navbar-form.navbar-left.search-form(role='search')
            .form-group
              input#search-user.form-control(type='text', placeholder='Search')
            button.btn.btn-default#search-submit(type='submit') Submit
      .row
        table#list-users.table.table-hover
          thead
            tr
              th Id
              th Firstname
              th Lastname
              th Action
          tbody
        ul.pagination
          li.disabled
            span Â«
          li.active
            span
              | 1 
              span.sr-only (current)
          li
            span
              | 2 
              span.sr-only (current)
          li
            span
              | 3 
              span.sr-only (current)
    script(src="main.min.js")
